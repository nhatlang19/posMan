<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.vn.vietatech.posman.POSMenuActivity" >

    <ScrollView
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#FFFFFF"
        android:scrollbars="vertical" >

        <HorizontalScrollView
            android:id="@+id/horizontalView"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:scrollbars="horizontal|vertical" >
        </HorizontalScrollView>
    </ScrollView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp" >

        <Button
            android:id="@+id/btnIPlus"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_grey"
            android:text="I+" />

        <Button
            android:id="@+id/btnISub"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_grey"
            android:text="I-" />

        <Button
            android:id="@+id/btnIx"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_grey"
            android:text="Ix" />

        <Button
            android:id="@+id/btnMT"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_blue"
            android:text="MT" />

        <Button
            android:id="@+id/btnSend"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_yellow"
            android:text="O.S" />

        <EditText
            android:id="@+id/txtPeople"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/textview_money"
            android:gravity="center"
            android:focusable="false"
            android:text="" >
        </EditText>

        <EditText
            android:id="@+id/txtMoney"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/textview_money"
            android:focusable="false" 
            android:gravity="center"
            android:inputType="numberDecimal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="" />
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="3dp"
        android:paddingTop="3dp"
        android:stretchColumns="*" >

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/btnX"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_red_delete"
                android:text="X" />

            <EditText
                android:id="@+id/editText1"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:background="@drawable/textview_money"
                 />
            <EditText
                android:id="@+id/editText2"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="@drawable/textview_money"
                 />

          <!--   <Spinner
                android:id="@+id/spinner1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background=" -->@drawable/spinner_background" />

            <Button
                android:id="@+id/btnIR"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_green"
                android:text="IR" />
        </TableRow>
    </TableLayout>
<GridView
            android:id="@+id/gridMainMenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnWidth="90dp"
            android:gravity="center"
            android:horizontalSpacing="5dp"
            android:numColumns="5"
            android:paddingTop="5dp"
            android:stretchMode="columnWidth"
            android:verticalSpacing="5dp" />

</LinearLayout>